<% layout("./layouts/boilerplate.ejs") %>
<div class="container mt-5">
    <h1>Your Shortened URLs</h1>

    <% if (urls && urls.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Long URL</th>
                    <th>Short URL</th>
                    <th>Hit Count</th>
                    <th>Daily Hit Count</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach(url => { %>
                <tr>
                    <td>
                        <a href="<%= url.longUrl %>" target="_blank">
                            <%= url.longUrl %>
                        </a>
                    </td>
                    <td>
                        <a
                            href="<%= `${BACKEND_URL}/redirect/${url.shortUrl}` %>"
                            target="_blank"
                        >
                            <%= `${BACKEND_URL}/redirect/${url.shortUrl}` %>
                        </a>
                    </td>
                    <td><%= url.hitCount %></td>
                    <td><%= url.dailyHitCount %></td>

                    <td>
                        <form
                            action="/details/<%= url.shortUrl %>"
                            method="GET"
                        >
                            <button
                                type="submit"
                                class="btn btn-primary btn-sm"
                            >
                                Details
                            </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <% } else { %>
    <p>No shortened URLs available.</p>
    <% } %>
</div>
