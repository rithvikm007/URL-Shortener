<% layout("./layouts/boilerplate.ejs") %>

<div class="container">
    <h1 class="text-center mb-4">Sign Up</h1>
    <form action="/user/signup" method="POST">
        <div class="mb-3">
            <input
                type="text"
                name="username"
                class="form-control"
                placeholder="Username"
                required
            />
        </div>
        <div class="mb-3">
            <input
                type="email"
                name="email"
                class="form-control"
                placeholder="Email"
                required
            />
        </div>
        <div class="mb-3">
            <input
                type="password"
                name="password"
                class="form-control"
                placeholder="Password"
                required
            />
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
    <p class="mt-3">
        Already have an account? <a href="/user/login">Log in here</a>
    </p>
</div>
